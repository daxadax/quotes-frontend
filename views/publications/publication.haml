.publication-container.clear

  .publication
    .title
      = show_title_for publication
      .publication-btn.btn-group
        .dropdown-toggle{:type => 'button',
          :data =>{:toggle => 'dropdown'}}
          %span.glyphicon.glyphicon-cog{:aria => {:hidden => true}}
        %ul.dropdown-menu
          %li=link_to "/publication/edit/#{publication.uid}", 'edit'
          %li=link_to '#', 'delete'
          %li=link_to "/publication/#{publication.uid}", 'permalink'
    .publication-info
      .author.pull-left
        Author:
        = show_author_for publication
      .publisher.pull-left
        Publisher:
        = "#{publication.publisher} (#{publication.year})"
