%html
%head
  %meta{:charset => 'utf-8',
              :name => 'viewport',
              :content => 'width=device-width, initial-scale=1'}

  %title Quotes From Underground

%body
  - unless @form_page
    #header
      =render :haml, :header
  #content
    .container
      = render :haml, :messages if messages.any?
      = yield

  %script{:src => '/javascript/jquery2.1.1.min.js'}
  %script{:src => '/javascript/bootstrap.min.js'}
  %link(rel="stylesheet" href='/stylesheets/bootstrap.min.css' type='text/css')
  %link(rel="stylesheet" href='/stylesheets/override.css' type='text/css')
  %link(rel="stylesheet" href='/stylesheets/bootstrap-theme.min.css' type='text/css')
